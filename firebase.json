{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".venv",
        "**/*.pyc",
        "__pycache__",
        ".env"
      ]
    }
  ],
  "hosting": {
    "target": "ezer-text",
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/generate",
        "function": "generate"
      }
    ]
  }
}